{
  "name": "vscode-x-lang",
  "displayName": "x-lang",
  "description": "VSCode x-lang 语法插件",
  "version": "0.0.2",
  "publisher": "peakchen90",
  "main": "./src/index.js",
  "icon": "./resource/logo.png",
  "scripts": {
    "test": "node ./tests/runTest.js"
  },
  "keywords": [
    "x-lang",
    "language",
    "grammar",
    "highlight"
  ],
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:x-lang"
  ],
  "contributes": {
    "languages": [
      {
        "id": "x-lang",
        "aliases": [
          "x",
          "x-lang",
          "xlang"
        ],
        "extensions": [
          ".x"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "x-lang",
        "scopeName": "source.x",
        "path": "./syntaxes/x-lang.tmLanguage.json"
      }
    ]
  },
  "devDependencies": {
    "vscode-test": "^1.6.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/peakchen90/vscode-x-lang.git"
  },
  "bugs": {
    "url": "https://github.com/peakchen90/vscode-x-lang/issues"
  }
}
