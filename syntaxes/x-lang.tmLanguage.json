{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "x-lang",
	"patterns": [{
			"include": "#keywords"
		},
		{
			"include": "#storages"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#function-declaration"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.x-lang",
				"match": "\\b(fn|var|return|if|else|loop|break|continue|import|class|extends)\\b"
			}, {
				"name": "keyword.operator.x-lang",
				"match": "([+*=<>&|!~%^]|/(?!/)|-(?!>))"
			}]
		},
		"storages": {
			"patterns": [{
				"begin": "(\\:|->)\\s*",
				"end": "(num|bool|str|void)\\b",
				"endCaptures": {
					"1": {
						"name": "storage.type.x-lang"
					}
				}
			}, {
				"name": "storage.modifier.x-lang",
				"match": "\\b(pub)\\b"
			}]
		},
		"strings": {
			"patterns": [{
				"name": "string.quoted.double.raw.x-lang",
				"begin": "\\br\"",
				"end": "\"",
				"patterns": [{
					"name": "constant.character.escape.x-lang",
					"match": "\\\\."
				}]
			}, {
				"name": "string.quoted.double.x-lang",
				"begin": "\"",
				"end": "(\"|\\n)",
				"patterns": [{
					"name": "constant.character.escape.x-lang",
					"match": "\\\\."
				}]
			}]
		},
		"numbers": {
			"patterns": [{
				"name": "constant.numeric.x-lang",
				"match": "\\b\\d+(\\.\\d*)?\\b"
			}]
		},
		"constants": {
			"patterns": [{
				"name": "constant.language.x-lang",
				"match": "\\b(true|false)\\b"
			}]
		},
		"comments": {
			"patterns": [{
				"name": "comment.line.x-lang",
				"match": "//.*"
			}]
		},
		"function-declaration": {}
	},
	"scopeName": "source.x"
}